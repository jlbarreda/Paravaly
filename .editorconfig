# editorconfig.org

# top-most EditorConfig file
root = true

# Default settings:
# A newline ending every file
# Use tabs of 4 spaces as indentation
[*]
trim_trailing_whitespace = true
insert_final_newline = false
indent_style = tab
indent_size = 4

# Xml project files
[*.{csproj,proj,nativeproj,locproj}]
indent_size = 2

# Xml files
[*.{xml,stylecop,resx,ruleset}]
indent_size = 2

# Xml config files
[*.{props,targets,config,nuspec}]
indent_size = 2

# Json files
[*.json]
indent_size = 2

# Scripts
[*.{cmd, bat}]
end_of_line = crlf
