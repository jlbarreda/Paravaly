		"Paravaly": "0.2.0-*",
		"Shouldly": "2.8.2",
		"Microsoft.CodeAnalysis.CSharp": {
			"version": "1.3.2",
			"type": "build"
		},
		"StyleCop.Analyzers": {
			"version": "1.0.0",
			"type": "build"
		}
	},

	"frameworks": {
		"netcoreapp1.0": {}
